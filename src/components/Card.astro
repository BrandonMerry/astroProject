---
export interface Props {
  title: string
  body: string
}

const { title, body } = Astro.props as Props
---

<div class='card'>
  <h3>{title}</h3>
  <p>{body}</p>
</div>

<style>
  .features .container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;
    padding: 0 20px;
    margin: 30px auto;
  }

  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }
</style>
